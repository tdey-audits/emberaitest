{
  "name": "monorepo-root",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.7.0",
  "description": "Root for the TypeScript pnpm workspace",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "lib/*",
    "templates/*"
  ],
  "scripts": {
    "clean": "rimraf .pnpm '**/node_modules' '**/dist' '**/dist-test' '**/*.tsbuildinfo' && echo 'Workspace cleaned.'",
    "build": "pnpm recursive run build",
    "build:sequential": "pnpm recursive run --sort --workspace-concurrency=1 build",
    "docker:compose:up": "docker compose up --build --no-log-prefix",
    "docker:compose:build": "docker compose build --no-cache",
    "docker:compose:down": "docker compose down",
    "lint": "pnpm recursive run lint",
    "lint:fix": "pnpm recursive run lint:fix",
    "test": "pnpm run test:vitest && pnpm run test:anvil",
    "test:anvil": "pnpm --filter lending-agent-no-wallet run test && pnpm --filter swapping-agent-no-wallet run test && pnpm --filter pendle-agent run test && pnpm --filter liquidity-agent-no-wallet run test",
    "test:vitest": "vitest run",
    "lint:require-submodule": "./scripts/require-submodule.sh",
    "start:anvil": "pnpm run lint:require-submodule && npx tsx test/start-anvil.ts",
    "start:mainnet": "pnpm run lint:require-submodule && npx tsx test/start-mainnet.ts",
    "release": "multi-semantic-release --sequential --packages \"lib/ember-plugin-registry\" --ignore-private-packages",
    "sync:rules": "rulesync generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "catalog:",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.5",
    "@semantic-release/npm": "^12.0.2",
    "@types/chai": "^4.3.11",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@viem/anvil": "^0.0.10",
    "c8": "catalog:",
    "chai": "^4.3.10",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "dotenv": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "glob": "^11.0.3",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "mocha": "^10.2.0",
    "mocha-suppress-logs": "^0.5.1",
    "multi-semantic-release": "^3.0.2",
    "prettier": "^3.5.3",
    "prool": "^0.0.24",
    "rimraf": "^6.0.1",
    "rulesync": "^2.2.0",
    "semantic-release": "^24.2.7",
    "tsx": "^4.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vitest": "catalog:"
  },
  "dependencies": {
    "ethers": "^5.7.2"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@firebase/util",
      "core-js",
      "esbuild",
      "fsevents",
      "protobufjs"
    ]
  }
}
