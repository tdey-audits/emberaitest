# DeFi Safety Agent Environment Configuration
# Copy this file to .env and fill in your values

# AI Provider API Keys (at least one required)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Agent Configuration
AGENT_NAME=DeFi Safety Agent
AGENT_VERSION=1.0.0
AGENT_DESCRIPTION=AI agent for evaluating DeFi protocol safety and documentation quality

# Server Configuration  
PORT=3010
ENABLE_CORS=true

# LLM Model Configuration
# Available models: google/gemini-flash-1.5, openai/gpt-4o-mini, anthropic/claude-3-haiku, etc.
LLM_MODEL=google/gemini-flash-1.5

# Optional: Base path for API routes
# BASE_PATH=/api/v1